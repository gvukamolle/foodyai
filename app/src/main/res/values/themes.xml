<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CalorieTracker" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Делаем системные бары прозрачными -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Включаем edge-to-edge режим -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <!-- Позволяем рисовать под системными барами -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
        <!-- Убираем полупрозрачность для Android 10+ -->
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        
        <!-- Устанавливаем светлые иконки по умолчанию (будем управлять из кода) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>
</resources>
